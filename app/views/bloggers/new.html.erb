<h1>New Blogger Form</h1>

<% if @blogger.errors %>
  <ul>
    <% @blogger.errors.full_messages.each do |msg| %>
      <li style="color: red;"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @blogger do |f| %>
  <label>Name:</label><br>
  <%= f.text_field :name %>
  <br><br>
  <label>Bio:</label><br>
  <%= f.text_area :bio, cols: 40, rows: 15, placeholder: "A blogger's bio must be more than 30 characters." %>
  <br><br>
  <label>Age:</label><br>
  <%= f.text_field :age %><br>
  <br><br>
  <%= f.submit %>
<% end %>